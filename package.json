{
  "name": "wxt-react-starter",
  "description": "manifest.json description",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm dev:serve\" \"pnpm test:watch\" \"pnpm lint\" \"pnpm format\"",
    "ci": "install --frozen-lockfile",
    "test": "vitest run --config ./vitest.config.ts",
    "spell-check": "cspell '**'",
    "lint": "eslint --config eslint.config.js .",
    "format": "prettier --write . --config ./prettier.config.js",
    "zip": "tsc && wxt zip",
    "postinstall": "husky install",
    "dev:serve": "wxt",
    "dev:no-test": "concurrently \"pnpm dev:serve\"",
    "test:watch": "vitest watch",
    "test:related": "vitest related --run"
  },
  "lint-staged": {
    "src/**/*": "pnpm test:related",
    "src/**/*.{ts,tsx,d.ts}": [
      "bash -c tsc --noEmit",
      "pnpm lint"
    ],
    "**/*.{ts,tsx,d.ts,json,css,scss}": "pnpm format",
    "*": "pnpm spell-check"
  },
  "dependencies": {
    "@antfu/utils": "0.7.10",
    "@vanilla-extract/css": "1.15.3",
    "@vanilla-extract/sprinkles": "1.6.2",
    "camelcase-keys": "9.1.3",
    "destyle.css": "4.0.1",
    "immer": "10.1.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-feather": "2.0.10",
    "zustand": "4.5.4"
  },
  "devDependencies": {
    "@eslint/compat": "1.0.3",
    "@eslint/js": "9.4.0",
    "@rollup/plugin-typescript": "11.1.6",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "14.1.0",
    "@types/chrome": "0.0.268",
    "@types/node": "20.9.0",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.11.0",
    "@vanilla-extract/vite-plugin": "4.0.13",
    "@wxt-dev/module-react": "1.1.0",
    "concurrently": "8.2.2",
    "cspell": "8.8.3",
    "eslint": "9.4.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-functional": "6.5.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.34.2",
    "eslint-plugin-react-hooks": "4.6.2",
    "globals": "15.8.0",
    "husky": "8.0.3",
    "jsdom": "22.1.0",
    "lint-staged": "15.2.5",
    "msw": "2.3.5",
    "prettier": "3.3.0",
    "ts-node": "10.9.1",
    "typescript": "5.4.5",
    "typescript-eslint": "7.11.0",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "2.0.1",
    "wxt": "0.19.1"
  },
  "volta": {
    "node": "20.16.0"
  }
}
